@model MvcZooStore.Models.Pet
@{
    ViewBag.Title = "Pet - " + Model.Title;
}

<h2>@Model.Title</h2>
<p>
    <img alt="@Model.Title" src="@Model.PetArtUrl" />
</p>
<div id="pet-details">
    <p>
        <em>Kind:</em>
        @Model.Kind.Name
    </p>
    <p>
        <em>Company:</em>
        @Model.Company.Name
    </p>
    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p>
        <em>Description:</em>
        @Model.Description
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart",
"ShoppingCart", new { id = Model.PetID }, "")
    </p>
</div>
